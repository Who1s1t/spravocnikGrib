<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Spravochnik.AddEditPage"
             Title="Добавление/Редактирование">
    <ScrollView>
        <StackLayout Padding="10">
            <Entry x:Name="NameEntry" Placeholder="Название гриба" />
            <Editor x:Name="DescriptionEditor" Placeholder="Описание" HeightRequest="100" />
            <Image x:Name="MushroomImage" HeightRequest="200" />
            <Button Text="Выбрать фото" Clicked="OnPickPhotoClicked" />
            <Button Text="Сохранить" Clicked="OnSaveClicked" />
            <Button Text="Удалить" Clicked="OnDeleteClicked" />
        </StackLayout>
    </ScrollView>
</ContentPage>
